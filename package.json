{
    "name": "lara-flow",
    "version": "1.0.0",
    "description": "ControlFlow and DataFlow graphs for Lara.",
    "type": "module",
    "parserOptions": {
        "project": [
            "./*/tsconfig.json",
            "./tsconfig.*.json"
        ]
    },
    "scripts": {
        "build": "tsc",
        "build:watch": "tsc --watch",
        "lint": "eslint .",
        "format": "prettier --write .",
        "sandbox": "cross-env DEBUG=\"*\" npx clava-js out/src/sandbox.js -- clang in/sandbox",
        "sandbox:watch": "cross-env DEBUG=\"*\" npx clava-js out/src/sandbox.js -w out/src -w in/sandbox -- clang in/sandbox"
    },
    "exports": {
        "./*": {
            "types": "./out/src/*.d.ts",
            "default": "./out/src/*.js"
        }
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Goncalerta/lara-flow.git"
    },
    "keywords": [
        "clava",
        "rust",
        "c",
        "borrow checker",
        "static analysis"
    ],
    "author": "",
    "bugs": {
        "url": "https://github.com/Goncalerta/lara-flow/issues"
    },
    "homepage": "https://github.com/Goncalerta/lara-flow#readme",
    "dependencies": {
        "lara-js": "^0.0.1"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^6.7.4",
        "@typescript-eslint/parser": "^6.7.4",
        "cross-env": "^7.0.3",
        "eslint": "^8.50.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-jest": "^27.4.2",
        "eslint-plugin-tsdoc": "^0.2.17",
        "prettier": "^3.2.5",
        "typescript": "^5.3.3"
    }
}
