{
    "name": "@specs-feup/flow",
    "version": "1.0.3",
    "publishConfig": {
        "access": "public"
    },
    "description": "Control-flow, Data-flow, static-call, and other graphs for Lara.",
    "type": "module",
    "files": [
        "code",
        "src-code",
        ".gitignore",
        "LICENSE",
        "package.json",
        "README.md",
        "tsconfig.json",
        "typedoc.config.js"
    ],
    "parserOptions": {
        "project": [
            "./*/tsconfig.json",
            "./tsconfig.*.json"
        ]
    },
    "scripts": {
        "build": "tsc -b src-code",
        "build:watch": "tsc --watch",
        "lint": "eslint .",
        "format": "prettier --write .",
        "docs": "typedoc --out docs"
    },
    "exports": {
        "./*": {
            "types": "./code/*.d.ts",
            "default": "./code/*.js"
        }
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/specs-feup/flow.git"
    },
    "keywords": [],
    "author": "Pedro Gon√ßalo Correia",
    "bugs": {
        "url": "https://github.com/specs-feup/flow/issues"
    },
    "homepage": "https://github.com/specs-feup/flow#readme",
    "dependencies": {
        "cytoscape": "^3.30.3"
    },
    "devDependencies": {
        "@types/cytoscape": "^3.21.8",
        "@types/node": "^22.9.2",
        "@typescript-eslint/eslint-plugin": "^6.7.4",
        "@typescript-eslint/parser": "^6.7.4",
        "cross-env": "^7.0.3",
        "eslint": "^8.50.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-jest": "^27.4.2",
        "eslint-plugin-tsdoc": "^0.2.17",
        "prettier": "^3.2.5",
        "typedoc": "^0.26.5",
        "typescript": "^5.3.3"
    }
}
